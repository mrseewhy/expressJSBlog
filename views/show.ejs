<%- include('partials/header')  %> 
<h1>Single Post</h1>
<div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-image">
          <img src="<%=blog.url  %>">
          <span class="card-title"><%=blog.title  %> </span>
        </div>
        <div class="card-content">
          <p><%=blog.body  %></p>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn left" href="/blogs/<%=blog._id  %>/edit">Edit</a>
          <form action="/blogs/<%=blog._id %>?_method=DELETE" method="post">
            <button class="waves-effect waves-light btn right" type="submit">DELETE</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer')  %> 